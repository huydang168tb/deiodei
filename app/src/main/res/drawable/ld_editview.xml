<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#aaaaaa" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
            android:top="2dp"
            android:left="2dp"
            android:right="2dp"
            android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#333333" />
            <corners android:radius="8dp" />
            <padding
                    android:left="10dp"
                    android:right="10dp"
                    android:top="5dp"
                    android:bottom="5dp" />
        </shape>
    </item>
</layer-list>
